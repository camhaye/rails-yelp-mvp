<%= render "restaurants/navbar", restaurant: @restaurant %>

<div class="container"><h1><%= @restaurant.name %></h1>
  <h2><%= @restaurant.category %></h2>
  <ul>
    <li><%= @restaurant.address %></li>
    <li><%= @restaurant.phone_number %></li>
  </ul>
  </br>

  <h2>Add a review</h2>
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :content %>
    <%= f.submit %>
    <% end %>

  </br>
  <h2>Reviews</h2>
    <% @restaurant.reviews.each do |review| %>

  <h4><%= review.rating  %> stars</h4>
    <ul class="list-group"><li class="list-group-item"><%= review.content %></li></ul>
  <% end %>
</div>
